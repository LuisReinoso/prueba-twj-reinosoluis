<div class="row">
  <div class="col-sm-5">
    <h2>Editar Bodega</h2>
    <form action="/Bodega/editarBodegaForm" method="post" class="form-horizontal ">
      <div class="form-group">
        <label class="control-label col-sm-3">Nombre</label>
        <div class="col-sm-9">
          <input type="text" class="form-control" placeholder="Ingrese nombre" name="nombre" value="<%= bodegaAEditar.nombre %>">
        </div>
      </div>

      <div class="form-group">
        <label class="control-label col-sm-3">Direccion</label>
        <div class="col-sm-9">
          <input type="text" class="form-control" placeholder="Ingrese direccion" name="direccion" value="<%= bodegaAEditar.direccion %>">
        </div>
      </div>

      <div class="form-group">
        <label class="control-label col-sm-3">Capacidad (Toneladas)</label>
        <div class="col-sm-9">
          <input type="number" class="form-control" placeholder="Ingrese nombre" name="capacidad" value="<%= bodegaAEditar.capacidad %>">
        </div>
      </div>

      <input type="hidden" name="idBodega" value="<%= bodegaAEditar.id %>">
      <button type="submit" class="btn btn-success btn-block">Editar Bodega</button>
    </form>

  </div>
  <div class="col-sm-1"></div>

  <div class="col-sm-5 form-horizontal">
    <h2>Datos Raza</h2>

    <div class="col-sm-5 control-label">
      <strong>Nombre</strong>
    </div>
    <div class="col-sm-7">
      <p class="form-control-static">
        <%= bodegaAEditar.nombre%>
      </p>
    </div>

    <div class="col-sm-5 control-label">
      <strong>Direccion</strong>
    </div>
    <div class="col-sm-7">
      <p class="form-control-static">
        <%= bodegaAEditar.direccion%>
      </p>
    </div>

    <div class="col-sm-5 control-label">
      <strong>Capacidad</strong>
    </div>
    <div class="col-sm-7">
      <p class="form-control-static">
        <%= bodegaAEditar.capacidad%>
      </p>
    </div>

  </div>

</div>
</div>
